{% extends 'layout.html.j2' %}

{% block title %}DSW Seed Maker{% endblock %}

{% block content %}
    <div class="container">
        <h1>Welcome to DSW Seed Maker</h1>

        <div class="form-section">
            <h2>Search for Resources</h2>
            <div class="form-group">
                <label for="input-search">Enter your search query:</label>
                <div class="d-flex">
                    <input type="text" class="form-control me-2" id="input-search" placeholder="Search resources...">
                    <button id="btn-list" class="btn btn-primary">List</button>
                </div>
            </div>

            <div id="seedHelp" class="help-text mt-3">
                <p><strong>Available resources for seeding:</strong></p>
                <ul>
                    <li>all_resources</li>
                    <li>users</li>
                    <li>project_importers</li>
                    <li>knowledge_models</li>
                    <li>locales</li>
                    <li>document_templates</li>
                    <li>projects</li>
                    <li>documents</li>
                </ul>
            </div>
        </div>

        <hr>

        <div class="response-section">
            <h3>Response:</h3>
            <textarea id="output-search" class="form-control" rows="15" readonly></textarea>
            <button id="btn-copy" class="btn btn-secondary mt-2">Copy to Clipboard</button>
            <button id="btn-process" class="btn btn-secondary mt-2">Process</button>
        </div>

        <footer class="footer mt-4">
            <p>DSW Seed Maker was created during BioHackathon2024</p>
        </footer>
    </div>
{% endblock %}

{% block scripts %}
    {{ super() }}
{% endblock %}
